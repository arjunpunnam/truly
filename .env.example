# Database Configuration
DB_TYPE=postgresql

# PostgreSQL
POSTGRES_HOST=db-postgres
POSTGRES_PORT=5432
POSTGRES_DB=ruleengine
POSTGRES_USER=ruleengine
POSTGRES_PASSWORD=changeme

# MySQL
MYSQL_HOST=db-mysql
MYSQL_PORT=3306
MYSQL_DATABASE=ruleengine
MYSQL_USER=ruleengine
MYSQL_PASSWORD=changeme

# SQLite (file path)
SQLITE_PATH=/data/ruleengine.db

# Turso (libSQL)
# For remote Turso: jdbc:dbeaver:libsql:https://[your-db].turso.io
# For local sqld: jdbc:dbeaver:libsql:http://localhost:8080
TURSO_DATABASE_URL=jdbc:dbeaver:libsql:https://your-db-url.turso.io
TURSO_AUTH_TOKEN=your-auth-token

# Backend
SPRING_PROFILES_ACTIVE=${DB_TYPE}
SERVER_PORT=8080

# Frontend
VITE_API_URL=http://localhost:8080/api
